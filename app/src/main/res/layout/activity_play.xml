                    <!--android:id="@+id/video_flunet"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:background="@drawable/btn_video_level_selector"-->
                    <!--android:text="@string/string_smooth"-->
                    <!--android:textColor="@color/color_white"-->
                    <!--android:textSize="15.4sp"/>-->
                    <!--</RelativeLayout>-->

                    <!--<RelativeLayout-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1">-->
                    <!--<TextView-->
                    <!--android:id="@+id/video_balanced"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:background="@drawable/btn_video_level_selector"-->
                    <!--android:text="@string/string_balanced"-->
                    <!--android:textColor="@color/color_white"-->
                    <!--android:textSize="15.4sp"/>-->
                    <!--</RelativeLayout>-->

                    <!--<RelativeLayout-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1">-->
                    <!--<TextView-->
                    <!--android:id="@+id/video_hd"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:background="@drawable/btn_video_level_selector"-->
                    <!--android:text="@string/string_hd"-->
                    <!--android:textColor="@color/color_white"-->
                    <!--android:textSize="15.4sp"/>-->
                    <!--</RelativeLayout>-->
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <com.easygo.monitor.view.widget.ExRelativeLayout
        android:id="@+id/overlay_top_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#A5000000"
        android:visibility="gone">
        <ImageView
            android:id="@+id/overlay_image_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:src="@drawable/icn_back1"/>
    </com.easygo.monitor.view.widget.ExRelativeLayout>
</RelativeLayout>
